---
import Container from "../components/shared/Container.astro";
import Paragraph from "../components/shared/Paragraph.astro";

// Mantener solo la informaci贸n de contacto
const contactInfo = [
  {
    icon: "whatsapp",
    text: "1166438023",
    link: "https://wa.me/541166438023",
    srOnly: "WhatsApp"
  },
  {
    icon: "email",
    text: "Ventastitanflex@gmail.com",
    link: "mailto:Ventastitanflex@gmail.com",
    srOnly: "Email"
  },
  {
    icon: "location",
    text: "Alvarez prado 2370 - Villa Tesei - Buenos aires",
    link: "https://www.google.com/maps/search/?api=1&query=Alvarez+prado+2370+Villa+Tesei+Buenos+aires",
    srOnly: "Direcci贸n"
  },
  {
    icon: "clock",
    text: "Lunes a viernes de 8am a 19pm",
    link: "#",
